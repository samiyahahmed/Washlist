<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/text_address_username"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_editview_height"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginHorizontal="@dimen/address_editview_margin_horizontal"
        android:layout_marginTop="8dp"
        android:hint="@string/address_hint_name"
        android:padding="10dp"
        android:textAlignment="textStart"
        android:textSize="@dimen/address_editview_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="start" />
    <EditText
        android:id="@+id/text_address_mobile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_editview_height"
        android:inputType="phone"
        android:minEms="10"
        android:maxEms="10"
        android:background="@drawable/rounded_rectangle"
        android:layout_marginHorizontal="@dimen/address_editview_margin_horizontal"
        android:layout_marginTop="8dp"
        android:hint="@string/address_hint_mobile"
        android:textAlignment="center"
        android:textSize="@dimen/address_editview_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_address_username"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/text_address_flat_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_editview_height"
        android:layout_marginHorizontal="@dimen/address_editview_margin_horizontal"
        android:layout_marginTop="8dp"
        android:hint="@string/address_hint_flat_number"
        android:background="@drawable/rounded_rectangle"
        android:textAlignment="center"
        android:textSize="@dimen/address_editview_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_address_mobile"
        android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/text_address_landmark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/address_editview_height"
        android:layout_marginHorizontal="@dimen/address_editview_margin_horizontal"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle"
        android:textAlignment="center"
        android:hint="@string/address_hint_landmark"
        android:textSize="@dimen/address_editview_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_address_flat_number"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/goToPayment"
        android:text="Pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>